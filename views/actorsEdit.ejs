<% include ./partials/header.ejs %>
    <h1>Add new Actor</h1>
    <form action="/actors/<%=actorData._id%>/edit?_method=PUT" method="POST" autocomplete="off">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="actorName">Name</label>
            <div class="col-sm-10">
                <input type="text" name="actorName" class="form-control" value="<%=actorData.Name%>">
            </div>
        </div>

        <div class="form-group row">
            <label for="sex" class="col-sm-2 col-form-label">Sex</label>
            <%if(actorData.Sex == "male"){%>
                <div class="col-sm-3">
                        <input class="" name="sex" type="radio" value="male" checked>Male
                    </div>
                    <div class="col-sm-3">
                        <input class="" name="sex" type="radio" value="female">Female
                    </div>
                    <div class="col-sm-3">
                        <input class="" name="sex" type="radio" value="other">Other
                    </div>
            <%}else if(actorData.Sex == "female"){%>
                <div class="col-sm-3">
                        <input class="" name="sex" type="radio" value="male">Male
                    </div>
                    <div class="col-sm-3">
                        <input class="" name="sex" type="radio" value="female" checked>Female
                    </div>
                    <div class="col-sm-3">
                        <input class="" name="sex" type="radio" value="other">Other
                    </div>
            <%}else{%>
                <div class="col-sm-3">
                        <input class="" name="sex" type="radio" value="male">Male
                    </div>
                    <div class="col-sm-3">
                        <input class="" name="sex" type="radio" value="female">Female
                    </div>
                    <div class="col-sm-3">
                        <input class="" name="sex" type="radio" value="other" checked>Other
                    </div>
            <%}%>

        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="DOB">Date of Birth</label>
            <div class="col-sm-10">
                <input class="form" type="date" name="DOB" id="" max="now" value="<%=actorData.DOB.getFullYear()%>-<%=actorData.DOB.getMonth()+1%>-<%=actorData.DOB.getDate()%>">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="bio">Bio</label>
            <textarea name="bio" class="col-sm-10 form-control" rows="5"><%=actorData.Bio%></textarea>
        </div>

        <button class="btn btn-primary" type="submit">Update</button>
        <a class="btn btn-danger" href="/movies">Cancel</a>
    </form>
<% include ./partials/footer.ejs %>